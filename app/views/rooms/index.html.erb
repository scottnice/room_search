<h1>Listing rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr class= "<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= room.name %></td>
        <td class="list_actions">
        <%= link_to 'Show', room %><br/>
        <%= link_to 'Edit', edit_room_path(room) %><br/>
        <%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
