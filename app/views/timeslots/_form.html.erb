<div class="room_search_form">
<%= form_for(@timeslot) do |f| %>
  <% if @timeslot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@timeslot.errors.count, "error") %> prohibited this timeslot from being saved:</h2>

      <ul>
      <% @timeslot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>
<legend>Enter Timeslot Details</legend>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.time_select :start_time, { minute_step: 10 } %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.time_select :end_time, { minute_step: 10 } %>
  </div>
  <div class="field">
    <%= f.label :day %><br>
    <%= f.select :day, options_for_select([ ['Monday','MONDAY'], ['Tuesday','TUESDAY'], ['Wednesday','WEDNESDAY'], ['Thursday','THURSDAY'], ['Friday','FRIDAY'], ['Saturday','SATURDAY'], ['Sunday','SUNDAY']]) %>
  </div>
  <div class="field">
    <%= f.label :room_id %><br>
    <%= f.select :room_id, Room.all.collect{ |r| [r.name, r.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  </fieldset>
<% end %>
</div>